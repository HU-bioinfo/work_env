{
    "name": "dev container",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "container",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "REditorsupport.r"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "r.rterm.linux": "/usr/local/bin/R",
                "r.rterm.option": [
                  "--no-save",
                  "--no-restore"
                ],
                "r.lsp.path": "/usr/local/bin/R"
            }
        }
    },
    "workspaceFolder": "/home/user/wd/proj",
    "postAttachCommand": "cd /home/user/wd/proj"
}
